{
  "name": "@lpc-lang/bedoc",
  "version": "1.0.0",
  "description": "BeDoc parser for LPC",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc -b && node ./build.js",
    "start": "npm run build && npx bedoc -f markdown -i \"../lpc-test2/**/*.c\" -o docs"
  },
  "exports": {
    ".": "./index.js"
  },  
  "bedoc": {
    "actions": [
      "./index.js"
    ],
    "printer": "./index.js",
    "parser": "./index.js",
    "input": [
      "../lpc-test2/**/*.c"
    ],
    "output": "docs"
  },
  "author": "jlchmura",
  "license": "MIT",
  "dependencies": {
    "@gesslar/bedoc": "^1.6.0",
    "@lpc-lang/core": "^1.1.2-5.2"
  },
  "devDependencies": {
    "@types/node": "^22.13.1",
    "esbuild": "^0.25.0",
    "typescript": "^5.7.3"
  }
}
